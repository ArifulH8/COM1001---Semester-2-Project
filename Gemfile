  # Sinatra/Webserver
  gem "require_all"
  gem "sinatra"
  gem "sinatra-contrib"
  gem "thin"

  # Database
  gem "sequel"
  gem "sqlite3"

  # RSpec Testing
  gem "capybara"
  gem "rack-test"
  gem "rspec"
  gem "simplecov"

  # Rubocop
  gem 'rubocop', require: false
  gem 'rubocop-rspec', require: false
  gem 'rubocop-sequel'
end
